<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.scrs.Controllers.EditStudentController" spacing="10">
    <Label text="Edit Student Profile" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Current Password:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <PasswordField fx:id="currentPasswordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="New Password:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <PasswordField fx:id="newPasswordField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Programme:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="programmeField" editable="false" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Semester:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="semesterField" editable="false" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Confirm" onAction="#handleConfirm"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>
